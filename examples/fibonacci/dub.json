{
    "name": "fibonacci",
    "description": "Shows how to create a function calculating the Fibonacci series, jit-compile it, and execute it in-memory with llvm-d",
	"copyright": "Copyright © 2013-2017 Moritz Maxeiner, Copyright © 2016-2017 Alex Parrill",
	"license": "MIT",
	"authors": [
		"Moritz Maxeiner",
		"Alex Parrill"
	],

    "targetType": "executable",
    "sourceFiles": ["fibonacci.d"],
    "dependencies": {
        "llvm-d": { "path": "../.." }
    },
    "configurations": [
        {
            "name": "single-llvm",
            "libs": ["LLVM"]
        },
        {
            "name": "split-llvm",
            "libs": [
                "LLVMCore",
                "LLVMAnalysis",
                "LLVMExecutionEngine",
                "LLVMScalarOpts",
                "LLVMMCJIT",
                "LLVMX86Info",
                "LLVMX86CodeGen",
                "LLVMX86Desc",
                "LLVMX86Disassembler",
                "LLVMX86AsmParser"
            ]
        }
    ]
}